@model MVC_Validation.Models.BaseModel.Item

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<form action="/Home/AddItemSubmit" method="post" enctype="multipart/form-data">
    <table class="table">
        <tr>
            <td>
                <input type="text" class="form-control" name="Name" value="@(Model?.Name)" />
            </td>
        </tr>
        @if (TempData["NameError"] != null)
        {
            <tr>
                <td>
                    <p>
                        @TempData["NameError"]
                    </p>
                </td>
            </tr>
        }
        <tr>
            <td>
                <input type="text" class="form-control" name="Price" value="@(Model?.Price)" />
            </td>
        </tr>
        @if (TempData["PriceError"] != null)
        {
            <tr>
                <td>
                    <p>
                        @TempData["PriceError"]
                    </p>
                </td>
            </tr>
        }
        <tr>
            <td>
                <textarea name="Description" class="form-control">@(Model?.Description)</textarea>
            </td>
        </tr>
        @if (TempData["DescriptionError"] != null)
        {
            <tr>
                <td>
                    <p>
                        @TempData["DescriptionError"]
                    </p>
                </td>
            </tr>
        }
        <tr>
            <td>
                <input type="submit" value="Save Item" />
            </td>
        </tr>
    </table>
</form>
